@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix ids_temp: <https://schema.industrialdataspace.org/temporal/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .

# Classes
# -------

ids_temp:TemporalEntity rdfs:subClassOf time:TemporalEntity;
    a owl:Class;
    rdfs:label "TemporalEntity"@en ;
    rdfs:comment "A temporal interval or instant."@en.

ids_temp:Instant rdfs:subClassOf ids_temp:TemporalEntity;
    rdfs:subClassOf time:Instant;
    a owl:Class;
    rdfs:label "Instant"@en ;
    rdfs:comment "A temporal entity with zero extent or duration."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_temp:inXSDDateTime;
        ids_rel:constraint ids_rel:NotNull;
    ].

ids_temp:Interval rdfs:subClassOf ids_temp:TemporalEntity;
    rdfs:subClassOf time:Interval;
    a owl:Class;
    rdfs:label "Interval"@en ;
    rdfs:comment "A temporal entity with non-zero extent or duration, i.e. for which the value of the beginning and end are different."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_temp:beginning;
        ids_rel:constraint ids_rel:NotNull;
    ].

# Properties for describing temporal entities
# -------------------------------------------

ids_temp:inXSDDateTime rdfs:subPropertyOf time:inXSDDateTime;
    a owl:DatatypeProperty;
    rdfs:domain ids_temp:Instant;
    rdfs:range xsd:dateTime;
    rdfs:label "inXSDDateTime"@en;
    rdfs:comment "Position of an Instant."@en.

ids_temp:beginning rdfs:subPropertyOf time:hasBeginning;
    a owl:ObjectProperty;
    rdfs:domain ids_temp:Interval;
    rdfs:range ids_temp:Instant;
    rdfs:label "beginning"@en;
    rdfs:comment "Beginning of an Interval."@en.

ids_temp:end rdfs:subPropertyOf time:hasEnd;
    a owl:ObjectProperty;
    rdfs:domain ids_temp:Interval;
    rdfs:range ids_temp:Instant;
    rdfs:label "end"@en;
    rdfs:comment "End of an Interval."@en.