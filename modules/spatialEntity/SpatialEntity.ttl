@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix locn: <http://www.w3.org/ns/locn#> .
@prefix gn: <http://www.geonames.org/ontology#> .
@prefix wgs84: <http://www.w3.org/2003/01/geo/wgs84_pos#> .

@prefix ids_spatial: <https://schema.industrialdataspace.org/spatialEntity/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_doc: <https://schema.iais.fraunhofer.de/ids/helper/documentation/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .

# Classes
# -------

ids_spatial:SpatialEntity rdfs:subClassOf wgs84:SpatialThing;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "SpatialEntity"@en ;
    rdfs:comment "Anything with spatial extent, i.e. size, shape, or position, e.g., places and unique positions."@en.

ids_spatial:Location rdfs:subClassOf ids_spatial:SpatialEntity;
    rdfs:subClassOf dct:Location;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "Location"@en ;
    rdfs:comment "Class of all locations on Earth."@en.

ids_spatial:GeoPoint rdfs:subClassOf ids_spatial:Location;
    a owl:Class;
    rdfs:label "GeoPoint"@en ;
    rdfs:comment "A location identified by geo coordinates."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_spatial:latitude;
        ids_rel:constraint ids_rel:NotNull;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_spatial:longitude;
        ids_rel:constraint ids_rel:NotNull;
    ].

ids_spatial:GeoFeature rdfs:subClassOf ids_spatial:Location;
    a owl:Class;
    rdfs:label "GeoFeature"@en ;
    rdfs:comment "A location identified by a geonames identifier."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_spatial:geoFeatureId;
        ids_rel:constraint ids_rel:NotNull;
    ].

ids_spatial:Geometry rdfs:subClassOf locn:Geometry;
    rdfs:subClassOf ids_spatial:Location;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "Geometry"@en ;
    rdfs:comment "Geometrical shape indicating a spatial area of interest."@en.

ids_spatial:BoundingPolygon rdfs:subClassOf ids_spatial:Geometry;
    a owl:Class;
    rdfs:label "BoundingPolygon"@en;
    rdfs:comment "Defines an area of interest as a set of connected points."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_spatial:geoPoint;
        ids_rel:relationType ids_rel:OneToMany;
        ids_rel:constraint ids_rel:NotEmpty;
    ].

# Properties for describing spatial entitites
# -------------------------------------------

ids_spatial:latitude rdfs:subPropertyOf wgs84:lat;
    rdfs:domain ids_spatial:GeoPoint;
    rdfs:range xsd:float;
    rdfs:label "latitude"@en;
    rdfs:comment "Latitude of a GeoPoint (decimal degrees)."@en.

ids_spatial:longitude rdfs:subPropertyOf wgs84:long;
    rdfs:domain ids_spatial:GeoPoint;
    rdfs:range xsd:float;
    rdfs:label "longitude"@en;
    rdfs:comment "Longitude of a GeoPoint (decimal degrees)."@en.

ids_spatial:geoFeatureId rdfs:subPropertyOf gn:geonamesID;
    rdfs:domain ids_spatial:GeoFeature;
    rdfs:range xsd:string;
    rdfs:label "geoFeatureId"@en;
    rdfs:comment "Geonames identifier."@en.

ids_spatial:geoPoint a owl:ObjectProperty;
     rdfs:domain ids_spatial:BoundingPolygon;
     rdfs:range ids_spatial:GeoPoint;
     rdfs:label "geoPoint"@en;
     ids_doc:labelPluralForm "geoPoints"@en;
     rdfs:comment "Refers to a GeoPoint that is member of a BoundingPolygon."@en.