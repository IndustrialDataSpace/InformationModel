@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix org: <http://www.w3.org/ns/org#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .

@prefix ids_part: <https://schema.industrialdataspace.org/participant/> .
@prefix ids_base: <https://schema.industrialdataspace.org/base/> .
@prefix ids_doc: <https://schema.iais.fraunhofer.de/ids/helper/documentation/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .
@prefix ids_industry: <https://schema.industrialdataspace.org/industry/> .

# Classes
# -------

ids_part:Participant rdfs:subClassOf ids_base:EntityWithLifecycle;
    a owl:Class;
    rdfs:subClassOf org:Organization;
    rdfs:subClassOf odrl:Party;
	rdfs:label "Participant"@en;
	rdfs:comment "An organization being part of the Industrial Data Space."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_part:memberPerson;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_part:memberParticipant;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_part:corporateEmailAddress;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_part:Person rdfs:subClassOf foaf:Person;
    a owl:Class;
	rdfs:label "Person"@en;
	rdfs:comment "The class of persons (people)"@en;
	ids_rel:validation [
        ids_rel:forProperty ids_part:phoneNumber;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_part:emailAddress;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_part:Site a owl:Class;
    rdfs:subclassOf org:Site;
    rdfs:label "Site"@en;
	rdfs:comment "An office or other premise at which the organization is located"@en.

# Properties for describing a Participant
# ---------------------------------------

ids_part:primarySite rdfs:subPropertyOf org:hasPrimarySite;
    a owl:ObjectProperty;
    rdfs:label "primarySite"@en;
    rdfs:domain ids_part:Participant;
    rdfs:range ids_part:Site;
    rdfs:comment "Indicates a primary site for the Organization, this is the default means by which an Organization can be contacted and is not necessarily the formal headquarters."@en.

ids_part:corporateEmailAddress rdfs:subPropertyOf foaf:mbox;
    a owl:DatatypeProperty;
    ids_doc:labelPluralForm "corporateEmailAddresses"@en;
    rdfs:label "corporateEmailAddress"@en;
    rdfs:domain ids_part:Participant;
    rdfs:range xsd:string;
    rdfs:comment "Email address for contacting the participant on a general level."@en.

ids_part:corporateHomepage rdfs:subPropertyOf foaf:homepage;
    a owl:DatatypeProperty;
    rdfs:label "corporateHomepage"@en;
    rdfs:domain ids_part:Participant;
    rdfs:range xsd:anyURI;
    rdfs:comment "General official homepage of the participant."@en.

ids_part:memberParticipant rdfs:subPropertyOf org:hasMember;
    a owl:ObjectProperty;
    rdfs:domain ids_part:Participant;
    rdfs:range ids_part:Participant;
    ids_doc:labelPluralForm "memberParticipants"@en;
    rdfs:label "memberParticipant"@en;
    rdfs:comment "Indicates that a participant has a member which is again a participant. This is useful for defining hierarchical relations in a participant's organization as well as identifying groups of participants to capture, e.g., members of a collaboration."@en.

ids_part:coversIndustry a owl:ObjectProperty;
    rdfs:label "coversIndustry"@en;
    rdfs:domain ids_part:Participant;
    rdfs:range ids_industry:Industry;
    ids_trans:refByURI true;
    rdfs:comment "Industry branch covered by the Participant."@en.

# Properties for describing a Person
# ----------------------------------

ids_part:memberPerson rdfs:subPropertyOf org:hasMember;
    a owl:ObjectProperty;
    rdfs:domain ids_part:Participant;
    rdfs:range ids_part:Person;
    ids_doc:labelPluralForm "memberPersons"@en;
    rdfs:label "memberPerson"@en;
    rdfs:comment "Indicates membership of a person to an organization."@en.

ids_part:familyName rdfs:subPropertyOf foaf:familyName;
    a owl:DatatypeProperty;
    rdfs:domain ids_part:Person;
    rdfs:range xsd:string;
    rdfs:label "familyName"@en;
    rdfs:comment "Family name of a Person."@en.

ids_part:givenName rdfs:subPropertyOf foaf:givenName;
    a owl:DatatypeProperty;
    rdfs:domain ids_part:Person;
    rdfs:range xsd:string;
    rdfs:label "givenName"@en;
    rdfs:comment "Given name of a Person."@en.

ids_part:phoneNumber rdfs:subPropertyOf foaf:phone;
    a owl:DatatypeProperty;
    rdfs:domain ids_part:Person;
    rdfs:range xsd:string;
    ids_doc:labelPluralForm "phoneNumbers"@en;
    rdfs:label "phoneNumber"@en;
    rdfs:comment "Phone number of a person."@en.

ids_part:emailAddress rdfs:subPropertyOf foaf:mbox;
    a owl:DatatypeProperty;
    rdfs:domain ids_part:Person;
    rdfs:range xsd:string;
    ids_doc:labelPluralForm "emailAddresses"@en;
    rdfs:label "emailAddress"@en;
    rdfs:comment "Email contact of a person."@en.

ids_part:homepage rdfs:subPropertyOf foaf:homepage;
    a owl:DatatypeProperty;
    rdfs:domain ids_part:Person;
    rdfs:range xsd:string;
    rdfs:label "homepage"@en;
    rdfs:comment "Website providing additional information about a person."@en.

# Properties for describing a Site
# --------------------------------

ids_part:siteAddress rdfs:subPropertyOf org:siteAddress;
    a owl:ObjectProperty;
    rdfs:domain ids_part:Site;
    rdfs:range xsd:string;
    rdfs:label "siteAddress"@en;
    rdfs:comment "Indicates an address for the site."@en.