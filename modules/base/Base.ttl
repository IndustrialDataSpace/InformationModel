@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

@prefix ids: <https://schema.industrialdataspace.org/> .
@prefix ids_base: <https://schema.industrialdataspace.org/base/> .
@prefix ids_spatial: <https://schema.industrialdataspace.org/spatialEntity/> .
@prefix ids_activity: <https://schema.industrialdataspace.org/activity/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .
@prefix ids_doc: <https://schema.iais.fraunhofer.de/ids/helper/documentation/> .

# Classes
# -------

ids_base:EntityWithLifecycle a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "EntityWithLifecycle"@en ;
    rdfs:comment "The class of all individuals that are subject of a lifecycle which needs to be tracked.";
    ids_rel:validation [
        ids_rel:forProperty ids_base:lifecycleActivity;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_base:entityName;
        ids_rel:relationType ids_rel:OneToMany;
        ids_rel:constraint ids_rel:NotNull;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_base:entityDescription;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_base:InfrastructureComponent rdfs:subClassOf ids_base:EntityWithLifecycle;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "InfrastructureComponent"@en ;
    rdfs:comment "The class of all infrastructure components of the IDS.";
    ids_rel:validation [
        ids_rel:forProperty ids_base:operator;
        ids_rel:constraint ids_rel:NotNull;
    ].

# Properties of InfrastructureComponent
# -------------------------------------

ids_base:maintainer a owl:ObjectProperty;
    rdfs:label "maintainer"@en;
    rdfs:domain ids_base:InfrastructureComponent;
    rdfs:range ids_base:Participant;
    ids_trans:refByURI true;
    rdfs:comment "Participant responsible for maintaining the InfrastructureComponent."@en.

ids_base:operator a owl:ObjectProperty;
    rdfs:label "operator"@en;
    rdfs:domain ids_base:InfrastructureComponent;
    rdfs:range ids_base:Participant;
    ids_trans:refByURI true;
    rdfs:comment "Participant responsible for operating the InfrastructureComponent."@en.

ids_base:owner a owl:ObjectProperty;
    rdfs:label "owner"@en;
    rdfs:domain ids_base:InfrastructureComponent;
    rdfs:range ids_base:Participant;
    ids_trans:refByURI true;
    rdfs:comment "Participant owning the InfrastructureComponent."@en.

ids_base:physicalLocation a owl:ObjectProperty;
    rdfs:label "physicalLocation"@en;
    rdfs:domain ids_base:InfrastructureComponent;
    rdfs:range ids_spatial:Location;
    rdfs:comment "The location where the Connector is physically deployed."@en.

# Properties of EntityWithLifecycle
# -------------------------------------

ids_base:entityName rdfs:subPropertyOf dct:title;
	a owl:DatatypeProperty;
	rdfs:domain ids_base:EntityWithLifecycle;
	rdfs:range rdf:PlainLiteral;
    rdfs:label "entityName"@en;
    ids_doc:labelPluralForm "entityNames"@en;
	rdfs:comment "Name of the EntityWithLifecycle."@en.

ids_base:entityDescription rdfs:subPropertyOf dct:description;
	a owl:DatatypeProperty;
	rdfs:domain ids_base:EntityWithLifecycle;
	rdfs:range rdf:PlainLiteral;
	rdfs:label "entityDescription"@en;
	ids_doc:labelPluralForm "entityDescriptions"@en;
	rdfs:comment "Freetext description of the EntityWithLifecycle.".

ids_base:generationActivity rdfs:subPropertyOf prov:wasGeneratedBy;
    a owl:ObjectProperty;
    rdfs:label "generationActivity"@en;
    rdfs:domain ids_base:InfrastructureComponent;
    rdfs:range ids_activity:CreationActivity;
    rdfs:comment "Activity that led to the generation of the InfrastructureComponent."@en.

ids_base:lifecycleActivity a owl:ObjectProperty;
    rdfs:label "lifecycleActivity"@en;
    ids_doc:labelPluralForm "lifecycleActivities"@en;
    rdfs:domain ids_base:EntityWithLifecycle;
    rdfs:range ids_activity:Activity;
    rdfs:comment "Activity that occurs during the lifecycle of the InfrastructureComponent."@en.