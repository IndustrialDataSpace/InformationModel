@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsc: <https://w3id.org/idsa/code/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/master/examples/contract-and-usage-policy/templates/> .


shapes:AssetCollectionTemplateShape
	a sh:NodeShape ;
    sh:targetClass ids:AssetCollection ;
    sh:property shapes:AssetCollectionTemplate-assetSourcePropertyShape ;
    sh:property shapes:AssetCollectionTemplate-assetRefinementPropertyShape ;
.


shapes:AssetCollectionTemplate-assetSourcePropertyShape
    a sh:PropertyShape ;
    sh:path ids:assetSource ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:severity sh:Violation ;
    sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/examples/contract-and-usage-policy/templates/TargetTemplates/AssetTemplateShapes.ttl> (AssetCollectionTemplate-assetSourcePropertyShape): In a _:AssetCollection the ids:assetSource property must point to a xsd:anyURI."@en ;
.


shapes:AssetCollectionTemplate-assetRefinementPropertyShape
    a sh:PropertyShape ;
    sh:path ids:assetRefinement ;
    sh:or(
        [
            sh:class ids:Constraint ;
        ]
        [
            sh:class ids:LogicalConstraint ;
        ]
    ) ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:severity sh:Violation ;
    sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/examples/contract-and-usage-policy/templates/TargetTemplates/AssetTemplateShapes.ttl> (AssetCollectionTemplate-assetRefinementPropertyShape): In a _:AssetCollection the ids:assetRefinement property must point to a) one ids:Costraint or b) one ids:LogicalCostraint."@en ;
.


shapes:AssetTemplateOptionsShape
    a sh:NodeShape ;
    sh:or(
        [
            sh:nodeKind sh:IRI ;
        ]
        [
            sh:class ids:AssetCollection ;
        ]
    ) ;
    sh:severity sh:Violation ;
.
